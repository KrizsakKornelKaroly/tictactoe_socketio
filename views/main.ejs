<%- include('header') %>

    <div class="row">
        <div class="col-8 text-center">
            <h3>Tic-tac-toe - Kód: <%= chatConfig.roomId %></h3>

            <div class="game-board">
                <button class="box" id="1"></button>
                <button class="box" id="2"></button>
                <button class="box" id="3"></button>
                <button class="box" id="4"></button>
                <button class="box" id="5"></button>
                <button class="box" id="6"></button>
                <button class="box" id="7"></button>
                <button class="box" id="8"></button>
                <button class="box" id="9"></button>
            </div>
        </div>
        <div class="col-4 text-center">
            <div>
                <h3>Játékosok</h3>
                <div class="player-list mb-3">
                    <ul id="players-list">
                        <li>Player 1 - <span id="player-character-1"></span></li>
                        <li>Player 2 - <span id="player-character-2"></span></li>
                    </ul>
                </div>

                <button id="leave-btn" class="btn btn-outline-light mb-3">Kijelentkezés</button>
            </div>
        </div>
    </div>

    <script>
        window.chatConfig = <%- JSON.stringify(chatConfig) %>;
    </script>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>

<%- include('footer') %>